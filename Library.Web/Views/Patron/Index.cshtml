@model LibraryWeb.Models.PatronModel.PatronIndexModel
<div class="card">
    <div class="card-content">
        <table>
            <thead>
                <tr>
                    <th>Profile Link</th>
                    <th>Fullname</th>
                    <th>Library card id</th>
                    <th>Overdue fees</th>
                    <th>Home library</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var patron in Model.Patrons)
                {
                    <tr>
                        <td><a asp-controller="Patron" asp-action="Detail" asp-route-id="@patron.Id">Profile</a></td>
                        <td>@patron.FullName</td>
                        <td>@patron.LibraryCardId</td>
                        <td>@patron.OverdueFees</td>
                        <td>@patron.HomeLibraryBranch</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
